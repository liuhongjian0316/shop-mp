<!--search-->
<view class="round bg-white search-box flex " style="margin: 0rpx {{sysInfo.screenWidth - sysCapsule.right}}px;">
    <view class="_icon-search px-4" />
    <swiper autoplay vertical interval="3000" circular class="search-show-value"
        style="width:{{sysInfo.screenWidth * 0.4}}px;">
        <block wx:for="{{10}}" wx:key="*this">
            <swiper-item>苹果{{index}}</swiper-item>
        </block>
    </swiper>
    <view class="swiper-mask" style="width:{{sysInfo.screenWidth * 0.5}}px;">
    </view>
    <view class="cicon-camera-o camera-icon">
    </view>
    <button class="search-btn ui-btn sm ui-BG-Main round">
        搜索
    </button>
</view>